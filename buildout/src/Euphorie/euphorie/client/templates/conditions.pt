// <![CDATA[
    function updateButton() {
        var $conditions = $(this),
            button = $("#agreeButton")[0],
            at_bottom;
        
        if (!button.disabled) {
            return;
        }
 
        at_bottom=(this.scrollHeight-$conditions.scrollTop())<=$conditions.innerHeight();
        if (at_bottom) {
            button.disabled=false;
        }
    }

    $(document).ready(function() {
