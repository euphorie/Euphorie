<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="euphorie"
>
  <record name="euphorie.allow_self_registration">
    <field type="plone.registry.field.Bool">
      <title i18n:translate="">Euphorie: allow self registration</title>
      <description i18n:translate="">If checked, anybody will be able to register a new account.</description>
      <default>True</default>
      <missing_value>True</missing_value>
      <required>False</required>
    </field>
  </record>
</registry>
