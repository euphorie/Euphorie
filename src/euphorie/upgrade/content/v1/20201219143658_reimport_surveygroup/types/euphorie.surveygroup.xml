<?xml version="1.0"?>
<object name="euphorie.surveygroup" meta_type="Dexterity FTI"
   i18n:domain="euphorie" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

 <!-- Basic information -->
 <property name="title" i18n:translate="">OiRA Tool</property>
 <property name="description" i18n:translate="">A survey.</property>
 <property name="content_icon">folder_icon.gif</property>
 <property name="global_allow">False</property>
 <property name="allow_discussion">False</property>

 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
   <element value="euphorie.survey"/>
 </property>

 <property name="klass">euphorie.content.surveygroup.SurveyGroup</property>
 <property name="add_permission">euphorie.content.AddNewRIEContent</property>

 <property name="schema">euphorie.content.surveygroup.ISurveyGroup</property>
 <property name="model_source"></property>
 <property name="model_file"></property>

 <!-- List of enabled behaviors -->
 <property name="behaviors">
  <element value="plone.app.content.interfaces.INameFromTitle" />
 </property>

 <!-- View information -->
 <property name="immediate_view"/>
 <property name="default_view"/>
 <property name="default_view_fallback">False</property>
 <property name="view_methods">
 </property>

 <!-- Method aliases -->
 <alias from="(Default)" to="(selected layout)"/>
 <alias from="edit" to="@@edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="@@view"/>

 <!-- Actions -->
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}" visible="True">
  <permission value="View"/>

 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>

 <action title="Upload" action_id="upload" category="object" condition_expr=""
    url_expr="string:${object_url}/@@upload" visible="True">
  <permission value="Euphorie: Add new RIE Content"/>
 </action>
</object>
