<?xml version="1.0" encoding="utf-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        meta_type="Dexterity FTI"
        name="euphorie.sector"
        i18n:domain="euphorie"
>

  <!-- Basic information -->
  <property name="title"
            i18n:translate=""
  >Sector</property>
  <property name="description"
            i18n:translate=""
  >A sector is national organisation for a specific type of industry.</property>
  <property name="content_icon">document_icon.gif</property>
  <property name="global_allow">False</property>
  <property name="allow_discussion">False</property>

  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="euphorie.surveygroup" />
  </property>

  <property name="klass">euphorie.content.sector.Sector</property>
  <property name="add_permission">euphorie.content.ManageCountry</property>

  <property name="schema">euphorie.content.sector.ISector</property>
  <property name="model_source" />
  <property name="model_file" />

  <!-- List of enabled behaviors -->
  <property name="behaviors">
    <element value="plone.app.content.interfaces.INameFromTitle" />
    <element value="euphorie.content.behaviour.uniqueid.IIdGenerationRoot" />
  </property>

  <!-- View information -->
  <property name="immediate_view" />
  <property name="default_view" />
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
    <element value="view" />
  </property>

  <!-- Method aliases -->
  <alias from="(Default)"
         to="(selected layout)"
  />
  <alias from="edit"
         to="@@edit"
  />
  <alias from="sharing"
         to="@@sharing"
  />
  <alias from="view"
         to="@@view"
  />

  <!-- Actions -->
  <action action_id="view"
          category="object"
          condition_expr=""
          title="View"
          url_expr="string:${object_url}"
          visible="True"
  >
    <permission value="View" />
  </action>
  <action action_id="edit"
          category="object"
          condition_expr=""
          title="Edit"
          url_expr="string:${object_url}/edit"
          visible="True"
  >
    <permission value="Modify portal content" />
  </action>
</object>
