  <metal:risk_comments define-macro="risk_comments">
    <fieldset class="pat-collapsible risk-module ${default_state|nothing}">
      <legend i18n:translate="heading_comments">
            Comments
      </legend>

      <fieldset class="vertical"
                id="comments"
      >
        <textarea class="span-15"
                  id="comment"
