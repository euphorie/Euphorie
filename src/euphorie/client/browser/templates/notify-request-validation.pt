          i18n:domain="euphorie"
><tal:span i18n:translate="email_request_validation_header">Dear
    <tal:span replace="options/consultant"
              i18n:name="recipient"
    />,</tal:span>
  <tal:span i18n:translate="email_request_validation_intro"><tal:span replace="options/requester"
              i18n:name="requester"
    />
